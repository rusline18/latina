body, html{
  font-family: 'Open Sans Condensed', sans-serif;
  font-size: 18px;
}

button(){
  border: 1px solid #ffb74d;
  color: #000;
  background: none;
  padding: 11px 13%;
  border-radius: 8px;
  font-weight: 100;
  -moz-transition: all .6s ease;
  -o-transition: all .6s ease;
  -webkit-transition: background .6s ease, colot .3s ease-out;
  &:hover{
    background: #ffb74d;
    color: #ffffff;
  }
  &:focus{
    background: #ffb74d;
    color: #ffffff;
  }
}

.nav_header{
  padding-right: 25px;
  img{
    width: 82%;
  }
  .nav_header-phone{
    font-size: 27px;
    font-weight: bold;
  }
}

button{
  button();
}

.focus-form{
  width: 100%;
  float: right;
  padding: 10px;
  background: rgba(255, 255, 255, 0.91);
  margin-top: 6%;
  text-align: center;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  h4:first-child{
    font-weight: bold;
  }
  p{
    font-size: 21px;
    span{
      font-weight: bold;
    }
  }
}

.advantage{
