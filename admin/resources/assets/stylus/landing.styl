}

//Модальнгое окно
.modal-content .sa{
  padding-left: 40%;
}

.modal-title{
  text-align: center;
}

.modal_form-button{
  margin-left: 0%;
  width: 100%;
}

@media only screen and (min-width: 600px){
  .modal_form-button{
    margin-left: 24%;
    width: 48%;
  }
  .modal-content .sa{
    padding-left: 45%;
  }
  .focus-form{
    width: 60%;
    margin-right: 13%;
  }
  .nav_header{
    img{
      width: 100%;
    }
  }
}

@media only screen and (min-width: 715px){
  .modal_form-button {
    margin-left: 32%;
    width: 39%;
  }
}

@media only screen and (min-width: 1455px){
  .focus-form{
    width: 24%;
  }
  .production{
    width: 45%;
    margin-left: 31%;
  }
}

@media only screen and (min-width: 2556px) {
  .focus-form{
    margin-top: 2%;
  }
}